{
    "manifest_version": 3,
    "name": "Bookmark Plus",
    "description": "Enhanced bookmark manager with tags and categories support",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/icon48.png"
    },
    "icons": {
        "48": "icons/icon48.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "commands",
        "contextMenus",
        "windows"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Q",
                "mac": "Alt+Q"
            },
            "description": "Open Bookmark Plus"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}